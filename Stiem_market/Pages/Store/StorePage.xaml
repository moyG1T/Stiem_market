<Page x:Class="Stiem_market.Pages.Store.StorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Stiem_market.Pages.Store"
      mc:Ignorable="d" 
       d:DesignHeight="720" d:DesignWidth="1280"
  Title="StorePage">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
            <StackPanel Height="3000">
                <ListBox x:Name="GameBox" Height="500" Background="{StaticResource DarkGray}" ItemsSource="{Binding Games}" ItemContainerStyle="{StaticResource GameList}" MouseDoubleClick="ListBox_MouseDoubleClick"/>

                <StackPanel Orientation="Vertical">
                    <WrapPanel x:Name="GamesPanel" Orientation="Horizontal"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <RadioButton x:Name="Radio1" Style="{StaticResource SliderButton}"></RadioButton>
                        <RadioButton x:Name="Radio2" Style="{StaticResource SliderButton}"></RadioButton>
                        <RadioButton x:Name="Radio3" Style="{StaticResource SliderButton}"></RadioButton>
                        <RadioButton x:Name="Radio4" Style="{StaticResource SliderButton}"></RadioButton>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
